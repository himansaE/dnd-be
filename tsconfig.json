{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@controllers/*": ["app/controllers/*"],
      "@middlewares/*": ["app/middlewares/*"],
      "@utils/*": ["app/utils/*"],
      "@services/*": ["app/services/*"],
      "@types/*": ["app/types/*"],
      "@repositories/*": ["app/repositories/*"],
      "@schemas/*": ["app/schemas/*"]
    }
  }
}
